---
import SpotifyArtist from '../../spotify/interfaces.ts';

interface Props {
    data: SpotifyArtist;
    rank: number;
}

const { data, rank } = Astro.props;

const maxGenres = 3;

import { Image } from 'astro:assets';
---

<div class="p-5 shadow-xl">
    <div class="w-full flex justify-center">
        <a href={data.external_urls.spotify} target="_blank">
            <Image class="max-h-96" src={data.images[0].url} alt={data.name} width=400 height=400 />
        </a>

    </div>
    <div class="mt-3">
        <p class="text-xl text-center"> <span class="text-xl text-gray-400">{rank}. </span>{data.name}</p>

        <div class="text-sm text-gray-500 flex justify-around mt-2">
            {
                data.genres.map((genre: string, index: number) => {
                    if (index > maxGenres) {
                        return;
                    }

                    return <p>{genre}</p>
                })
            }
        </div>
    </div>
</div>
